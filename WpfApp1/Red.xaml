<Window x:Class="WpfApp1.Red"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Редактировать источник" MaxHeight="300" MaxWidth="300" MinHeight="300" MinWidth="300">
    <Grid>

        <Image Source="Resources\Phonesa.jpg" Margin="-235,-154,0,-142"></Image>

        <Label Content="Название источника" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,10,0,0"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>
        <TextBox  Style="{DynamicResource TextBox1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,41,0,0" Background="{x:Null}" BorderBrush="#FFF18C10"></TextBox>

        <Label Content="Адрес" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,116,0,0"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>
        <TextBox  Style="{DynamicResource TextBox1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,147,0,0" Background="{x:Null}" BorderBrush="#FFF18C10"></TextBox>

        <Button Style="{DynamicResource ButtonStyle2}" Content="Изменить" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,0,0,47" BorderBrush="{x:Null}" Background="#FFF18C10"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14" ></Button>
        <Button Style="{DynamicResource ButtonStyle2}" Content="Отменить"  Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,47" BorderBrush="{x:Null}" Background="#FFF18C10"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Button>

    </Grid>
</Window>

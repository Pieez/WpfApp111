<Window x:Class="WpfApp1.DelVi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DelVi" MaxHeight="300" MaxWidth="300" MinHeight="300" MinWidth="300">
    <Grid>

        <Image Source="Resources\Phonesa.jpg" Margin="-235,-154,0,-142"></Image>

        <Label Content="Вы действительно хотите удалить строку с выбросами"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,39,0,0"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>
        <Button  Style="{DynamicResource ButtonStyle2}" Content="Да"  Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,0,0,47"  BorderBrush="{x:Null}" Background="#FFF18C10"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Button>
        <Button  Style="{DynamicResource ButtonStyle2}" Content="Нет" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,47" BorderBrush="{x:Null}" Background="#FFF18C10"  Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Button>

    </Grid>
</Window>

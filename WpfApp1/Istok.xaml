<Window x:Class="WpfApp1.Istok"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавить источник" MaxHeight="300" MaxWidth="300" MinHeight="300" MinWidth="300">
    <Grid>

        <Image Source="Resources\Phonesa.jpg" Margin="-235,-154,0,-142"></Image>

        <TextBox x:Name="Id" Style="{DynamicResource TextBox1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,86,0,0" Background="{x:Null}" BorderBrush="#FFF18C10" ></TextBox>
        <Label Content="ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,54,0,0" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>

        <Label Content="Название источника" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,109,0,0" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>
        <TextBox x:Name="Nazvis" Style="{DynamicResource TextBox1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,141,0,0" Background="{x:Null}" BorderBrush="#FFF18C10" ></TextBox>

        <Label Content="Адрес" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,158,0,0" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"></Label>
        <TextBox x:Name="Adres" Style="{DynamicResource TextBox1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,189,0,0" Background="{x:Null}" BorderBrush="#FFF18C10" ></TextBox>

        <Button Style="{DynamicResource ButtonStyle2}" Content="Добавить" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,0,0,10" BorderBrush="{x:Null}" Background="#FFF18C10" Click="Button_Click"></Button>
        <Button Style="{DynamicResource ButtonStyle2}" Content="Отменить" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" FontSize="14"  Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,10" BorderBrush="{x:Null}" Background="#FFF18C10" Click="Button_Click_1" ></Button>

    </Grid>
</Window>
